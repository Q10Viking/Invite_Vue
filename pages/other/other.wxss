/**index.wxss**/

.userinfo-avatar {
  width: 245rpx;
  height: 245rpx;
  margin: 0 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  margin-top: 20rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 80rpx;
  color: #fff; 
}

.heading {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 40rpx;
  color: #fff; 
}

.site {
  position: relative;
  width: 100%;
}
.siteimg {
  width: 100%;
  border-radius: 10rpx;
}

.inviteword {
  position: absolute;
  top: 0;
  left: 0;
  margin: 0 5%;
  padding: 50rpx 0;
  width: 90%;
  color: #505050;
  font-size: 38rpx;
}

.accepted {
  width: 100%;
  text-align: center;
}
.accepted > text {
  color: #fff;
}
.acceptnum {
  width: 100%;
  font-size: 100rpx;
}
.invited-avavtars {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  position: relative;
  width: 100%;
  margin-top: 60rpx;
  border-radius: 10rpx;
  background-color: #fff;
}
.invited-avavtars .square {
  position: absolute;
  top: -110rpx;
  left: 50%;
  margin-left: -57rpx;
  border-width: 57rpx;
  border-color: transparent transparent #fff transparent;
  border-style: solid; 
}
.invited-avavtars > image {
  margin: 10rpx;
  width: 125rpx;
  height: 125rpx;
  border-radius: 100%;
}

.join {
  margin: 100rpx auto 0;
  width: 90%;
  height: 125rpx;
  border-radius: 100rpx;
  background-color: #02d1d3;
  line-height: 125rpx;
  color: #fff;
  font-size: 42rpx;
  font-weight: bold;
}

.message {
  margin: 110rpx auto 0;
  width: 90%;
}
.messagehead {
  display: block;
  color: #fff; 
  text-align: center;
  font-size: 55rpx;
  font-weight: bold;
}
.messagebar {
  margin-top: 25rpx;
  width: 100%;
  background-color: #fff;
  border-radius: 10rpx;
}

.messagelist {
  margin: 35rpx 50rpx 43rpx;
  padding-bottom:  30rpx;
  border-bottom: 1px solid #aaa;
}
.list {
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.friendinfor {
  display: flex;
  align-items: center;
  height: 110rpx;
}
.friend-avatar {
  width: 105rpx;
  height: 105rpx;
  border-radius: 100%;
}
.friend-name {
  margin-left: 26rpx;
  font-size: 40rpx;
  font-weight: bold;
  color: #505050;
}
.feelgood {
  display: flex;
  height: 45rpx;
  font-size: 40rx;
}
.good {
  width: 45rpx;
  height: 45rpx;
  background-size: 100% auto;
  background-repeat: no-repeat;
  background-position: center;
  background-image: url("data:image/png;base64,");
}

.error {
  width: 45rpx;
  height: 45rpx;
  background-size: 100% auto;
  background-repeat: no-repeat;
  background-position: center;
  background-image: url("data:image/png;base64,");
}
.goodnum {
  margin-left: 5rpx;
  width: 45rpx;
  height: 45rpx;
  line-height: 45rpx;
  color: #505050;
  font-size: 40rpx;
}
.messagecon {
  width: 100%;
  padding-left: 70rpx;
  font-size: 35rpx;
  color: #505050;
}

.message-commit {
  display: flex;
  justify-content: space-between;
  margin-top: 22rpx;
  width: 100%;
}
.message-commit > textarea {
  padding: 5rpx 8rpx;
  height: 110rpx;
  border: 1px solid #aaa;
  border-radius: 10rpx;
  background-color: #fff;
  flex-grow:1;
}
.message-commit > button {
  margin-left: 20rpx; 
  padding: 0 20rpx;
  width: 160rpx;
  height: 120rpx;
  border-radius: 10rpx;
  background-color: #25b5ff;
  line-height: 120rpx;
  font-size: 38rpx;
  font-weight: bold;
  color: #fff;
}

.create {
  margin: 70rpx 0 100rpx; 
  width: 80%;
  height: 135rpx;
  background-color: #fcff25;
  line-height: 135rpx;
  color: #ff8400;
  font-size: 45rpx;
  font-weight: bold;
}